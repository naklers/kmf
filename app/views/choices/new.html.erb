<!-- Validation failure messages -->

<% if @choice.errors.any? %>
  <% @choice.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Choice</h3>
      </div>
      <div class="panel-body">

        <form action="/create_choice" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">



          <!-- Label and input for user_id -->
          <!-- <div class="form-group">

            <label for="user_id" class="col-sm-2 control-label">
              User
            </label>
            <div class="col-sm-10">

              <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @choice.user_id %>">

            </div>

          </div> -->


          <!-- Label and input for rank -->
          <div class="form-group">
            <label for="rank" class="col-sm-2 control-label">
              Rank #
            </label>
            <div class="col-sm-10">
              <select id="rank" name="rank" class="form-control" value="<%= @choice.rank %>">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
              </select>
            </div>
          </div>


          <!-- Label and input for target user -->
          <div class="form-group">

            <label for="target_id" class="col-sm-2 control-label">
              Target
            </label>
            <div class="col-sm-10">
              <%= select_tag(:target_id, options_from_collection_for_select(User.all, :id, :name, @choice.target_id), :class => "form-control") %>
              <!-- <input type="text" id="target_id" name="target_id" placeholder="Target" class="form-control" value="<%= @choice.target_id %>"> -->

            </div>

          </div>

          <!-- Label and input for disclose_if_no_match -->
          <div class="form-group">

            <div class="col-sm-offset-2 col-sm-10">
              <div class="checkbox">
                <label for="disclose_if_no_match">
                  <input type="checkbox" id="disclose_if_no_match" name="disclose_if_no_match" value="1" <%= "checked" if @choice.disclose_if_no_match %>>
                  Let him/her know even if no match
                </label>
              </div>
            </div>

          </div>


          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Create Choice
              </button>
              or
              <a href="/choices">Cancel</a>
            </div>
          </div>

        </form>

      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
