              <tbody>
                <% @choices.each do |choice| %>
                  <% if choice.user_id == current_user.id %>
                    <tr>
                      <!-- COMMENT OUT UNTIL DISCLOSURE TIME -->
                      <td>
                          <% if choice.matched == true %>
                            <span class="label label-success">Match!</span>
                          <% else %>
                            <span class="label label-danger">No match!</span>
                          <% end %>
                      </td>
                      <td>#<%= choice.rank %></td>
                      <td><img class="avatar-image" src="<%= User.find(choice.target_id).fb_pic_url%>" height="36" width="36"></td>
                      <td><%= User.find(choice.target_id).name %></td>
                      <td>
                        <% if choice.disclose_if_no_match == true %>
                          <span class="label label-default">Will be notified even if no match</span>
                        <% else %>
                          <span class="label label-warning">Not notifying if no match</span>
                        <% end %>
                      </td>
                      <td>
                      <!-- Not allowing edits - just delete and add new -->
                      <!-- <a href="/choices/<%= choice.id %>/edit" class="btn btn-default btn-sm">Edit</a> -->
                      <a href="/delete_choice/<%= choice.id %>" class="btn btn-danger btn-sm" rel="nofollow">Delete</a>
                      </td>
                    </tr>
                  <% end %>
                <% end %>
              </tbody>
            </table>
          <% else %>
            <div class="alert alert-info">
              You still haven't added any of your choices. Don't leave it for later!
          </div>
          <% end %>
  </div>
</div>
<% if current_user.choices.count<5 %>
  <a href="/choices/new" class="btn btn-primary btn-block">Add new choice</a>
<% end %>
